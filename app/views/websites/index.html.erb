<div class="row">
  <div class="col-md-10"><h1>Websites</h1></div>
  <div class="col-md-2 text-right"><%= link_to "Add New Website", new_website_path, class: "btn btn-default" %></div>
</div>

<table class="table table-hover">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>URL</th>
      <th>API Key</th>
    </tr>
  </thead>

  <tbody>
    <% @websites.each do |website| %>
      <tr>
        <td><%= website.id %></td>
        <td><%= website.name %></td>
        <td><%= website.url %></td>
        <td><%= website.api_key %></td>
      </tr>
    <% end %>
  </tbody>
</table>
