<div class="row">
  <div class="col-md-10"><h1>Website: <%= @website.name %></h1></div>
  <div class="col-md-2 text-right"><%= link_to "Add New Website", new_website_path, class: "btn btn-default" %></div>
</div>

<div class="row">
  <table class="table table-hover">
    <thead>
      <tr>
          <th>Key</th>
          <th>Value</th>
      </tr>
    </thead>

    <tbody>
        <tr>
          <td>ID</td>
          <td><%= @website.id %></td>
        </tr>
        <tr>
          <td>Name</td>
          <td><%= @website.name %></td>
        </tr>
        <tr>
          <td>URL</td>
          <td><%= @website.url %></td>
        </tr>
    </tbody>
  </table>
</div>

<div class="row">
  <h2>Associated Profiles</h2>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>WPT Settings</th>
        <th>WPT Code</th>
        <th>Time Interval (HRS)</th>
        <th>Action</th>
      </tr>
    </thead>

    <tbody>
      <% @website.profile.each do |profile| %>
        <tr>
          <td><%= profile.id %></td>
          <td><%= profile.name %></td>
          <td><%= profile.wpt_settings %></td>
          <td><%= profile.wpt_code %></td>
          <td><%= profile.interval %></td>
          <td><%= link_to "view", profile_path(profile.id) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>

<div class="row">
  <h2>Most Recent Associated Reports</h2>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>ID</th>
        <th>Status</th>
        <th>Profile Name</th>
        <th>WPT ID</th>
        <th>Action</th>
      </tr>
    </thead>

    <tbody>
      <% @website.report.take(5).each do |report| %>
      <tr>
        <td><%= report.id %></td>
        <td><%= report.status %></td>
        <td><%= link_to report.profile.name, profile_path(report.profile.id) %></td>
        <td><%= report.wpt_id %></td>
        <td><%= link_to "view", report_path(report.id) %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

</div>
