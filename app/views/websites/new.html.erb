

<div class="row">
  <h1>Add a New Website</h1>

    <%= form_for(@website, html: {novalidate: true}) do |f| %>

      <%= render 'shared/form_errors', {form_data: @website} %>

      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, required: true, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :url %>
        <%= f.text_field :url, required: true, class: "form-control" %>
      </div>

      <%= f.submit "Add New Site", class: "btn btn-primary" %>

    <% end %>

</div>
