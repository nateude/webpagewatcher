

<div class="row">
  <h1>Add a New Website</h1>

    <%= form_for(@website, html: {novalidate: true}) do |f| %>

      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, required: true, class: "form-control" %>
        <%= f.error_message_for(:name) %>
      </div>

      <div class="form-group">
        <%= f.label :url %>
        <%= f.text_field :url, required: true, class: "form-control" %>
        <%= f.error_message_for(:url) %>
      </div>

      <%= f.submit "Add New Site", class: "btn btn-primary" %>

    <% end %>

</div>
