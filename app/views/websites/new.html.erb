

<div class="row">
  <h1>Add a New Website</h1>

    <%= form_for(@website) do |f| %>

      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :url %>
        <%= f.text_field :url, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :api_key %>
        <%= f.text_field :api_key, class: "form-control" %>
      </div>

      <%= f.submit "Add New Site", class: "btn btn-primary" %>

    <% end %>

</div>
