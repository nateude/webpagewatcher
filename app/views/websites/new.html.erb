<h1>Add a New Website</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <%= form_for(@website) do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :url %>
      <%= f.text_field :url %>

      <%= f.label :api_key %>
      <%= f.text_field :api_key %>

      <%= f.submit "Add New Site", class: "btn btn-primary" %>

    <% end %>
  </div>
</div>
