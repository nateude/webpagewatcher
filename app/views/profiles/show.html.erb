<div class="row">
  <div class="col-md-10"><h1>Website: <%= @profile.name %></h1></div>
  <div class="col-md-2 text-right"><%= link_to "Add New Profile", new_profile_path, class: "btn btn-default" %></div>
</div>
<div class="row">
<table class="table table-hover">
  <thead>
    <tr>
        <th>Key</th>
        <th>Value</th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td>ID</td>
      <td><%= @profile.id %></td>
    </tr>
    <tr>
      <td>Name</td>
      <td><%= @profile.name %></td>
    </tr>
    <tr>
      <td>Website</td>
      <td><%= link_to @profile.website.name, website_path(@profile.website.id) %></td>
    </tr>
    <tr>
      <td>WPT Settings</td>
      <td><%= @profile.wpt_settings %></td>
    </tr>
    <tr>
      <td>WPT Code</td>
      <td><%= @profile.wpt_code %></td>
    </tr>
    <tr>
      <td>Time Interval</td>
      <td><%= @profile.interval %></td>
    </tr>
  </tbody>
</table>

</div>

<div class="row">
<h2>Associated Reports</h2>
<table class="table table-hover associated-reports">
  <thead>
    <tr>
      <th>ID</th>
      <th>Status</th>
      <th>WPT ID</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @profile.report.each do |report| %>
      <tr>
        <td><%= report.id %></td>
        <td><%= report.status %></td>
        <td><%= report.wpt_id %></td>
        <td><%= link_to "view", report_path(report.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
