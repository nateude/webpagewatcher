<div class="row">
  <div class="col-md-10"><h1>Profiles</h1></div>
  <div class="col-md-2 text-right"><%= link_to "Add New Profile", new_profile_path, class: "btn btn-default" %></div>
</div>

<table class="table table-hover">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Website</th>
      <th>URL</th>
      <th>WPT Settings</th>
      <th>WPT Code</th>
      <th>Time Interval (HRS)</th>
      <th>Reports</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.id %></td>
        <td><%= link_to profile.name, profile_path(profile.id) %></td>
        <td><%= link_to profile.website.name, website_path(profile.website.id) %></td>
        <td><%= profile.url %></td>
        <td><%= profile.wpt_settings %></td>
        <td><%= profile.wpt_code %></td>
        <td><%= profile.interval %></td>
        <td><%= profile.report.count %></td>
        <td>
          <%= button_to 'New Report', reports_path(params: generate_report(profile)) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
