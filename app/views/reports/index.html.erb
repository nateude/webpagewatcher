<div class="row">
  <div class="col-md-10"><h1>Reports</h1></div>
  <div class="col-md-2 text-right"><%= link_to "Add New Report", new_report_path, class: "btn btn-default" %></div>
</div>

<table class="table table-hover">
  <thead>
    <tr>
        <th>id</th>
        <th>website_id</th>
        <th>profile_id</th>
        <th>wpt_id</th>
        <th>status</th>
    </tr>
  </thead>

  <tbody>
    <% @reports.each do |report| %>
        <% website = Website.find(report.website_id) %>
        <% profile = Website.find(report.profile_id) %>
      <tr>
        <td><%= report.id %></td>
        <td><%= website.name %></td>
        <td><%= profile.name %></td>
        <td><%= report.wpt_id %></td>
        <td><%= report.status %></td>
      </tr>
    <% end %>
  </tbody>
</table>
