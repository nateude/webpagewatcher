.card.form-card
  .card-header
    h2.heading-2 Log In
  .card-body

    .form-wrapper
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .field-wrap
          = f.label :email
          = f.text_field :email, autofocus: true, autocomplete: 'email'

        .field-wrap
          = f.label :password
          = f.password_field :password, autocomplete: 'current-password'

        - if devise_mapping.rememberable?
          .field-wrap.checkbox-field
            = f.check_box :remember_me
            = f.label :remember_me

        .field-wrap.submit-field
          button.btn.btn-primay Log in

  .card-footer
    ul.bulletless
      li: a href=new_password_path(resource_name) Reset your password.
      li: a href=new_registration_path(resource_name) Register a new account.
